<%- include("../partials/header") %>
<div class="container">
    <div class="col">
        <h1 style="text-align: center;">Edit <%=campgrounds.name %>!</h1>
        <div class="col-md-8 col-lg-8 col-xl-8" style="margin: 25px auto;">
            <form action="/campgrounds/<%= campgrounds._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[name]" value="<%=campgrounds.name %>" required />
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="camp[price]" value="<%=campgrounds.price %>" min="0.01" step="0.01" required />
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="camp[image]" value="<%=campgrounds.image %>" required />
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="text" name="camp[description]"> <%=campgrounds.description %></textarea>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" value="<%= campgrounds.location %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>
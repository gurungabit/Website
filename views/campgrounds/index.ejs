<%- include("../partials/header") %>
<div class="container">
  <header class="jumbotron ">
    <div class="container">
      <h1>This is campgrounds page!</h1>
      <p>This is a example campgrounds</p>
      <p>
        <a href="/campgrounds/new" class="btn btn-primary btn-large">Add New Campground!</a>
      </p>
    </div>
  </header>

  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <% campgrounds.forEach(function(campgrounds){ %>
    <div class="col-md-6 col-lg-4 col-xl-3">
      <figure class="figure">
        <img src="<%= campgrounds.image %>" class="figure-img img-fluid rounded" />
        <figcaption class="figure-caption text-right">
          <h4><%= campgrounds.name %></h4>
          <p>
            <a class="btn btn-outline-light btn-sm" href="/campgrounds/<%= campgrounds._id %>">More Info</a>
          </p>
        </figcaption>
      </figure>
    </div>
    <% }); %>
  </div>
</div>
<%- include("../partials/footer") %>
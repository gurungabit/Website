<%- include("../partials/header") %>
<div class="container">
    <div class="col">
        <h1 style="text-align: center;">Edit name </h1>
        <div class="col-md-8 col-lg-8 col-xl-8" style="margin: 24px auto;">
            <form action="/campgrounds/<%=campground_id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" value="<%=comment.text%>" required />
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>
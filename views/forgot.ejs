<%- include("partials/header") %>
<div class="col">
    <h1 style="text-align: center">Reset Password</h1>
    <div class="col-md-6 col-lg-4 col-xl-3" style="margin: 25px auto;">
        <form action="/forgot" method="post">
            <div class="form-group">
                <input class="form-control" type="email" name="email" autofocus placeholder="email">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Reset Password</button>
            </div>
        </form>
        <a href="/login">Go Back</a>
    </div>
</div>
<%- include("partials/footer") %>